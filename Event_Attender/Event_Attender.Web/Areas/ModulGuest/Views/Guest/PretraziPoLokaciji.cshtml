@using EventAttender.Data.Models
@model Event_Attender.Web.Areas.ModulGuest.Models.PretragaEventaVM
@{
    ViewData["Title"] = "PretraziPoLokaciji";
    
}
<style>
    form {
        margin-top: 2%;
    }

    a.btn {
        color: gray;
        margin-top: 1%;
    }
   
    #pretraga {
        color: grey;
    }
    #pretraga:hover{
        color:black;
    }

    td {
        width: 50%;
    }
</style>

<form>
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="lokacija">
        <div class="input-group-btn">
            <button id="pretraga" class="btn btn-light" type="submit">
                Trazi
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
</form>
@if (Model.eventi != null)
{
    <table class="table">
        <tbody>
            @foreach (Event e in Model.eventi)
            {
                <tr>

                    <td>
                        <div>
                            @e.Slika
                        </div>
                    </td>

                    <td>
                        <div>
                            @e.Naziv <br />
                           
                            @e.ProstorOdrzavanja.Naziv,   
                            @e.ProstorOdrzavanja.Adresa  <br /> 
                            @e.ProstorOdrzavanja.Grad.Naziv
                       
                           <br />
                            @e.DatumOdrzavanja.Day.ToString()/@e.DatumOdrzavanja.Month.ToString()/@e.DatumOdrzavanja.Year.ToString()
                            - @e.VrijemeOdrzavanja h
                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-area="" asp-controller="Home" , asp-action="Index" class="btn btn-light">Nazad na početnu stranicu</a>


