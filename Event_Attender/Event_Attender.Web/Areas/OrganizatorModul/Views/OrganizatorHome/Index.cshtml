@using Event_Attender.Web.ViewModels

@{
    Layout = null;
    var prostori = (List<SelectListItem>) ViewData["ProstoriOdrzavanja"];
    var eventiOrganizatora = (List<OrganizatorEventVM>) ViewData["EventiOrganizatora"];

}

@model SnimiEventVM

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Organizator panel</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">

        <div class="row">
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <a class="navbar-brand" href="Index">Organizator panel</a>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <form asp-action="SnimiEvent"  method="post">

                    <div class="form-group">
                        <label for="nazivEventa">Naziv eventa</label>
                        <input required type="text" class="form-control" id="nazivEventa" asp-for="_nazivEventa">
                    </div>

                    <div class="form-group">
                        <label for="opisEventa">Opis</label>
                        <textarea type="text" class="form-control" id="opisEventa" asp-for="_opisEventa"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="datumEventa">Datum odrzavanja</label>
                        <input required type="date" class="form-control" id="datumEventa" asp-for="_datumEventa">
                    </div>

                    <div class="form-group">
                        <label for="vrijemeEventa">Vrijeme odrzavanja</label>
                        <input required type="time" class="form-control" id="vrijemeEventa" asp-for="_vrijemeEventa">
                    </div>

                    <label>Kategorija eventa</label>
                    <div  class="radio">
                        <label><input required type="radio" asp-for="_optradio" value="0">Muzika</label>
                    </div>
                    <div class="radio">
                        <label><input required type="radio" asp-for="_optradio" value="1">Kultura</label>
                    </div>
                    <div class="radio">
                        <label><input required type="radio" asp-for="_optradio" value="2">Sport</label>
                    </div>

                    <label for="odabirProstor">Prostor odrzavanja</label>
                    <select required id="odabirProstor" asp-for="_optcombo" asp-items="prostori">
                        <option value="" disabled selected>odaberite prostor</option>
                    </select>
                    <br />
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
            <div class="col-lg-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Naziv</th>
                            <th scope="col">Prostor odrzavanja</th>
                            <th scope="col">Kategorija</th>
                            <th scope="col">Datum odrzavanja</th>
                            <th scope="col">Vrijeme odrzavanja</th>
                            <th scope="col">Akcija</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (OrganizatorEventVM i in eventiOrganizatora)
                        {
                         @if (i.IsOdobren)
                         {
                        <tr class="success">
                            <td><a href="EventInfoPrikaz?EventID=@i.Id">@i.Naziv</a></td>
                            <td>@i.ProstorOdrzavanjaNaziv</td>
                            <td>@i.Kategorija.ToString()</td>
                            <td>@i.DatumOdrzavanja.ToShortDateString()</td>
                            <td>@i.VrijemeOdrzavanja</td>
                            <td><a href="OtkaziEvent?EventID=@i.Id">Otkazi</a></td>

                        </tr>
                                 }
                        else {
                    <tr class="danger">
                        <td><a href="EventInfoPrikaz?EventID=@i.Id">@i.Naziv</a></td>
                        <td>@i.ProstorOdrzavanjaNaziv</td>
                        <td>@i.Kategorija.ToString()</td>
                        <td>@i.DatumOdrzavanja.ToShortDateString()</td>
                        <td>@i.VrijemeOdrzavanja</td>
                    </tr>
                         }
                          
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>



</body>
</html>
