@model Event_Attender.Web.Areas.Administrator.Models.SponzorDisplayVM

<div id="Admin-Container">
    @{await Html.RenderPartialAsync("_AdminSponzorDisplay", Model);}
    <div id="Main-Display">
        @if (Model.OnDisplay != null)
        {
            <div>

                <h4>@Model.OnDisplay.Naziv</h4>
                <hr />
                <form>
                    <label>
                        @Html.DisplayNameFor(model => model.OnDisplay.Id)
                    </label>
                    <input type="text" value="@Html.DisplayFor(model => model.OnDisplay.Id)" readonly />

                    <label>
                        @Html.DisplayNameFor(model => model.OnDisplay.Naziv)
                    </label>
                    <input type="text" value="@Html.DisplayFor(model => model.OnDisplay.Naziv)" readonly />

                    <label>
                        @Html.DisplayNameFor(model => model.OnDisplay.Telefon)
                    </label>
                    <input type="text" value="@Html.DisplayFor(model => model.OnDisplay.Telefon)" readonly />

                    <label>
                        @Html.DisplayNameFor(model => model.OnDisplay.Email)
                    </label>
                    <input type="text" value="@Html.DisplayFor(model => model.OnDisplay.Email)" readonly />
                </form>
                
            </div>
            <div>
                <a class="btn btn-info"
                   asp-area="Administrator" asp-controller="Searchbar"
                   asp-action="UrediSponzor" asp-route-id="@Model.OnDisplay.Id">
                    Uredi
                </a>
                <a class="btn btn-danger"
                   asp-area="Administrator" asp-controller="Searchbar"
                   asp-action="ObrisiSponzor" asp-route-id="@Model.OnDisplay.Id">
                    Obriši
                </a>
            </div>
         }
    </div>
</div>
