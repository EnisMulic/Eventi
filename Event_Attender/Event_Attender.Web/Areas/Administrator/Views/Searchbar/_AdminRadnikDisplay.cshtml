@model Event_Attender.Web.Areas.Administrator.Models.RadnikDisplayVM
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div id="Admin-Searchbar">
    <input type="text" name="search" value="" />
    <button>
        @Html.ActionLink("Dodaj", "Edit", new { /* id = model.OnDisplay.PrimaryKey */ })
    </button>
    <table>
        <tbody>
            @foreach (var item in Model.Radnici)
            {
                <tr>
                    <td>
                        <a asp-area="Administrator" asp-controller="Searchbar"
                           asp-action="_RadnikInfo" asp-route-id="@item.Id">
                            @item.Ime @item.Prezime
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>