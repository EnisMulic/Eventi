@model Event_Attender.Web.Areas.Administrator.Models.IzvodjacVM
@using Event_Attender.Data.Models
@{
    Layout = null;
}

<h4>@Model.Naziv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="IzvodjacUredi" class="ea-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipIzvodjaca" class="control-label"></label>
                <select asp-for="TipIzvodjaca" class="form-control">
                    @{var tipovi = new SelectList(Enum.GetValues(typeof(TipIzvodjaca)));}
                    @foreach (var item in tipovi)
                    {
                        if (Model.TipIzvodjaca.ToString() == item.Text)
                        {
                            <option value="@item.Text" selected>@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Text">@item.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="TipIzvodjaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary"
                       asp-area="Administrator" asp-controller="Home" asp-action="IzvodjacSnimi" />
            </div>
        </form>
    </div>
</div>

