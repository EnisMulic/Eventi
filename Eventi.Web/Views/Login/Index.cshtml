
@{
    string error = (String)TempData["error_poruka"];
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";  
}

@model Eventi.Web.ViewModels.LoginVM

<style>
    form{
        width:50%;
        margin-left:auto;
        margin-right:auto;
    }
    .btn-dark{
        width:100%;
    }
</style>

<form action="/Login/Login">
    <label>Username: </label>
    <input class="form-control" asp-for="Username" name="username" type="text" size="20" />
    <span asp-validation-for="Username" class="text-danger"></span>
    <br />
    <label>Password: </label>
    <input class="form-control" asp-for="Password" name="password" type="password" size="20" />
    <span asp-validation-for="Password" class="text-danger"></span>
    <br />
    <input class="btn btn-dark" type="submit" value="Login" />
</form>

@if(error != null)
{
    <div class="alert alert-danger alert-dismissible">
        @error
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
}
