@model IEnumerable<Eventi.Web.Areas.Administrator.Models.EventVM>

@{
    Layout = null;
}

    <p>
        <button class="btn btn-primary" for="Create">Create</button>
    </p>

<table id="myTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventCategory)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsOdobren)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOtkazan)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    @if (item.IsApproved)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Neodobren</span>
                    }
                    @if (item.IsCanceled)
                    {
                        <span class="badge badge-danger">Canceled</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventCategory)
                </td>
                @*<td>
                    @item.IsOdobren
                </td>
                <td>
                    @item.IsOtkazan
                </td>*@
                <td id="Action-Buttons">
                    <button class="btn btn-primary" id="@item.ID" for="Edit">Edit</button>
                    <button class="btn btn-info" id="@item.ID" for="Details">Details</button>
                    <button class="btn btn-danger" id="@item.ID" for="Remove">Remove</button>
                    @*<a class="btn btn-danger"
                       asp-area="Administrator" asp-controller="Home"
                       asp-action="EventUkloni" asp-route-id="@item.Id">Ukloni</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
