@model IEnumerable<Eventi.Web.Areas.Administrator.Models.EventVM>

@{
    Layout = null;
}

    <p>
        <button class="btn btn-primary" for="Dodaj">Dodaj</button>
    </p>

<table id="myTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumOdrzavanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrijemeOdrzavanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsOdobren)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOtkazan)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                    @if (item.IsOdobren)
                    {
                        <span class="badge badge-success">Odobren</span>
                    }
                    else
                    {
                        <span class="badge badge-primary">Neodobren</span>
                    }
                    @if (item.IsOtkazan)
                    {
                        <span class="badge badge-danger">Otkazan</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumOdrzavanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VrijemeOdrzavanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategorija)
                </td>
                @*<td>
                    @item.IsOdobren
                </td>
                <td>
                    @item.IsOtkazan
                </td>*@
                <td id="Action-Buttons">
                    <button class="btn btn-primary" id="@item.Id" for="Uredi">Uredi</button>
                    <button class="btn btn-info" id="@item.Id" for="Info">Detalji</button>
                    <button class="btn btn-danger" id="@item.Id" for="Ukloni">Ukloni</button>
                    @*<a class="btn btn-danger"
                       asp-area="Administrator" asp-controller="Home"
                       asp-action="EventUkloni" asp-route-id="@item.Id">Ukloni</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
