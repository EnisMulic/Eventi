@model Eventi.Web.Areas.Administrator.Models.EventVM
@{ 
    Layout = null;
}
<div>
    <h4>@Model.Naziv</h4>
    <hr />
    <form>
        <img src=@Url.Content("~/images/items/" + @Model.Slika) alt="@Model.Naziv" height="550"/>
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Naziv" class="control-label"></label>
            <input asp-for="Naziv" class="form-control" readonly />
            <span asp-validation-for="Naziv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Opis" class="control-label"></label>
            <input asp-for="Opis" class="form-control" readonly />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DatumOdrzavanja" class="control-label"></label>
            <input asp-for="DatumOdrzavanja" class="form-control" readonly />
            <span asp-validation-for="DatumOdrzavanja" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VrijemeOdrzavanja" class="control-label"></label>
            <input asp-for="VrijemeOdrzavanja" class="form-control" readonly />
            <span asp-validation-for="VrijemeOdrzavanja" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kategorija" class="control-label"></label>
            <input asp-for="Kategorija" class="form-control" readonly />
            <span asp-validation-for="Kategorija" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsOdobren" readonly /> @Html.DisplayNameFor(model => model.IsOdobren)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsOtkazan" readonly /> @Html.DisplayNameFor(model => model.IsOtkazan)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="OrganizatorNaziv" class="control-label"></label>
            <input asp-for="OrganizatorNaziv" class="form-control" readonly />
            <span asp-validation-for="OrganizatorNaziv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AdministratorNaziv" class="control-label"></label>
            <input asp-for="AdministratorNaziv" class="form-control" readonly />
            <span asp-validation-for="AdministratorNaziv" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProstorOdrzavanjaNaziv" class="control-label"></label>
            <input asp-for="ProstorOdrzavanjaNaziv" class="form-control" readonly />
            <span asp-validation-for="ProstorOdrzavanjaNaziv" class="text-danger"></span>
        </div>
    </form>
</div>
<div>
    <button class="btn btn-primary" id="@Model.Id" for="Uredi">Uredi</button>
    @*<a asp-area="Administrator" asp-controller="Home" asp-action="Index">Back to List</a>*@
</div>