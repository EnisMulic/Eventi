@model IEnumerable<Eventi.Web.Areas.Administrator.Models.GradVM>
@{
    Layout = null;
}


<p>
    <button class="btn btn-primary" for="Dodaj">Dodaj</button>
</p>

<table id="myTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="th">
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th class="th">
                @Html.DisplayNameFor(model => model.DrzavaNaziv)
            </th>
            <th class="th"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrzavaNaziv)
                </td>
                <td id="Action-Buttons">
                    <button class="btn btn-primary" id="@item.Id" for="Uredi">Uredi</button>
                    <button class="btn btn-info" id="@item.Id" for="Info">Detalji</button>
                    <button class="btn btn-danger" id="@item.Id" for="Ukloni">Ukloni</button>
                    @*<a class="btn btn-danger"
                       asp-area="Administrator" asp-controller="Home"
                       asp-action="GradUkloni" asp-route-id="@item.Id">Ukloni</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>