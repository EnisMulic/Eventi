@model Eventi.Web.Areas.Administrator.Models.VenueVM
@using Eventi.Common
@{ 
    Layout = null;
}
<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProstorDodaj" class="ea-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" readonly />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VenueCategory" class="control-label"></label>
                <select asp-for="VenueCategory" class="form-control">
                    @{var categories = new SelectList(Enum.GetValues(typeof(VenueCategory)));}
                    @foreach (var category in categories)
                    {
                        if (Model.VenueCategory.ToString() == category.Text)
                        {
                            <option value="@category.Text" selected>@category.Text</option> 
                        }
                        else
                        {
                            <option value="@category.Text">@category.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="VenueCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <select asp-for="CityID" asp-items="Model.Cities" class="form-control"></select>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"
                       asp-area="Administrator" asp-controller="Venue" asp-action="VenueSave" />
            </div>
        </form>
    </div>
</div>

