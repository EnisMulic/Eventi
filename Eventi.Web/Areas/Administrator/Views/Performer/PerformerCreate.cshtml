@model Eventi.Web.Areas.Administrator.Models.PerformerVM
@using Eventi.Common
@{
    Layout = null;
}
<h4>IzvodjacVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PerformerCreate" class="ea-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" readonly />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerformerCategory" class="control-label"></label>
                <select asp-for="PerformerCategory" class="form-control">
                    @{var categories = new SelectList(Enum.GetValues(typeof(PerformerCategory)));}
                    @foreach (var category in categories)
                    {
                        if (Model.PerformerCategory.ToString() == category.Text)
                        {
                            <option value="@category.Text" selected>@category.Text</option> 
                        }
                        else
                                
                        {
                            <option value="@category.Text">@category.Text</option>
                        }
                      }
                </select>
                <span asp-validation-for="PerformerCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"
                       asp-area="Administrator" asp-controller="Performer" asp-action="PerformerSave" />
            </div>
        </form>
    </div>
</div>

