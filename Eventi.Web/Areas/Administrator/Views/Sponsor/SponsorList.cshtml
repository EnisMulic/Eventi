@model IEnumerable<Eventi.Web.Areas.Administrator.Models.SponsorVM>
@{
    Layout = null;
}

<p>
    <button class="btn btn-primary" for="Create">Add</button>
</p>
<table id="myTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th class="th">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="th">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th class="th">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td id="Action-Buttons">
                    <button class="btn btn-primary" id="@item.ID" for="Edit">Edit</button>
                    <button class="btn btn-info" id="@item.ID" for="Details">Details</button>
                    <button class="btn btn-danger" id="@item.ID" for="Remove">Remove</button>
                    @*<a class="btn btn-danger"
                       asp-area="Administrator" asp-controller="Home"
                       asp-action="SponzorUkloni" asp-route-id="@item.Id">Ukloni</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>




<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>