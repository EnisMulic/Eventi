@model Eventi.Web.Areas.Client.Models.EventSearchVM


<style>
    .col-sm-4 {
        margin-top: 1%;
        margin-bottom: 1%;
        padding-left: 0%;
        padding-right: 0%;
    }

    #opcijeDiv {
        margin-bottom: 2%;
    }

    #linkEvent {
        color: black;
    }

    #linkEvent:hover {
        color:#e61c41;
        text-decoration: none;
    }

    #izbornik {
        display: inline;
        float: right;
       
    }

   
</style>

<div id="opcijeDiv">
    <form class="form-inline" style="display:inline">
        <input name="filter" type="text" placeholder="Pretrazite po nazivu ili lokaciji..." class="form-control" size="30" />
        <input type="submit" class="btn btn-light" value="Traži" />
    </form>
    <div id="izbornik">
        <a asp-area="Client" asp-controller="Client" asp-action="Index" class="btn btn-light">All </a>
        <a asp-area="Client" asp-controller="Client" asp-action="Index" asp-route-filter="Music" class="btn btn-light">Music </a>
        <a asp-area="Client" asp-controller="Client" asp-action="Index" asp-route-filter="Culture" class="btn btn-light">Culture</a>
        <a asp-area="Client" asp-controller="Client" asp-action="Index" asp-route-filter="Sport" class="btn btn-light">Sport </a>
        <a asp-area="Client" asp-controller="PosjeceniEventi" asp-action="Index" class="btn btn-light">Posjećeni eventi</a>
    </div>
</div>

<div id="glavniDiv" class="row text-center">

    @foreach (var e in Model.Events)
    {
        <div class="col-sm-4">
            <div id="unutrasnji" class="thumbnail">
                @if (e.Image == null)
                {                                                      
                     <img src="~/images/items/events.jpg"  width="350" height="250">
                }
                else
                {
                <img src="~/images/items/@e.Image"  width="350" height="250"> 
                }
                <p> 
                    <a id="linkEvent" asp-area="Client" asp-controller="Client" asp-action="EventDetails" asp-route-EventID="@e.EventID" asp-route-ClientID="@Model.ClientID">
                        <strong>@e.Name</strong>
                    </a>
                </p>
                <p>
                    @e.VenueCity

                    <br />
                    @e.Start - @e.End

                </p>

                <br /><br />
            </div>
        </div>
    }

</div>

